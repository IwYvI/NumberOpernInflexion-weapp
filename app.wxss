/**app.wxss**/

page {
  background-color: #fbfbfb;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
}

.section-card {
  border-radius: 10rpx;
  box-sizing: border-box;
  box-shadow: 0 4rpx 10rpx 0 rgba(0, 0, 0, 0.1), 0 6rpx 20rpx 0 rgba(0, 0, 0, 0.19);
}

.section-button button{
  box-shadow: 0 2rpx 5rpx 0 rgba(0, 0, 0, 0.1), 0 3rpx 10rpx 0 rgba(0, 0, 0, 0.19);
}